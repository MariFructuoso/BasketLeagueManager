{% extends "base.njk" %}

{% block titulo %}Partidos | Basket League{% endblock %}

{% block contenido %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Partidos</h1>
        {% if session.rol == 'admin' %}
            <a href="/matches/nuevo" class="btn btn-success btn-sm">Nuevo Partido</a>
        {% endif %}
    </div>

    {% if matches.length > 0 %}
        <ul class="list-group shadow-sm">
            {% for match in matches %}
                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <div>
                        <strong>{{ match.homeTeam.name }}</strong> 
                        <span class="mx-2 text-primary fw-bold">vs</span> 
                        <strong>{{ match.awayTeam.name }}</strong>
                    </div>
                    
                    <div>
                        <span class="badge bg-dark me-3">{{ match.homeScore }} - {{ match.awayScore }}</span>
                        <a href="/matches/{{ match.id }}" class="btn btn-outline-primary btn-sm">Ver detalles</a>
                    </div>
                </li>
            {% endfor %}
        </ul>

    {% else %}
        <div class="alert alert-info text-center">
            No hay partidos registrados en la liga.
        </div>
    {% endif %}

{% endblock %}