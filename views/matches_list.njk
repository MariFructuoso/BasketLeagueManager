{% extends "base.njk" %}

{% block titulo %}Partidos | Basket League{% endblock %}

{% block contenido %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Listado de Partidos</h1>
        <a href="/matches/nuevo" class="btn btn-success">Nuevo Partido</a>
    </div>

    {% if matches.length > 0 %}
        <div class="row">
            {% for match in matches %}
                <div class="col-md-6 mb-3">
                    <div class="card text-center">
                        <div class="card-header">
                            {{ match.date.toLocaleDateString() if match.date else "Fecha pendiente" }}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ match.homeTeam.name }} vs {{ match.awayTeam.name }}
                            </h5>
                            
                            <p class="card-text display-6">
                                {{ match.homeScore }} - {{ match.awayScore }}
                            </p>                            
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% else %}
        <div class="alert alert-info">
            No hay partidos en el sistema.
        </div>
    {% endif %}

{% endblock %}