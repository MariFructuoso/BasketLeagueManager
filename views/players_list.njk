{% extends "base.njk" %}

{% block titulo %}Lista de Jugadores{% endblock %}

{% block contenido %}
    <h1>Mis Jugadores</h1>
    <ul>
        {% for player in players %}
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ player.nickname }}</h5>
            
                    <a href="/players/{{ player.id }}" class="btn btn-info">Ver detalles</a>

                    <a href="/players/{{ player.id }}/edit" class="btn btn-warning">Editar</a>

                    <form action="/players/{{ player.id }}" method="post" style="display:inline;">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                    

                </div>
            </div>
        {% endfor %}
    </ul>
{% endblock %}