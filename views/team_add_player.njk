{% extends "base.njk" %}

{% block titulo %}A침adir Jugador | Basket League{% endblock %}

{% block contenido %}
    <div class="container">
        <h1>A침adir jugador para: {{ team.name }}</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <div class="card shadow-sm p-4 mt-4">
            <form action="/teams/{{ team.id }}/roster" method="post">
                
                <div class="mb-3">
                    <label for="playerSelect" class="form-label">Seleccionar Jugador:</label>
                    <select name="player" id="playerSelect" class="form-select" required>
                        <option value="" disabled selected>-- Elige un jugador --</option>
                        {% for p in players %}
                            <option value="{{ p.id }}">{{ p.name }} ({{ p.nickname }})</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="joinDateInput" class="form-label">Fecha de Incorporaci칩n:</label>
                    <input type="date" name="joinDate" id="joinDateInput" class="form-control" required>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/teams/{{ team.id }}" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success">
                        A침adir
                    </button>
                </div>

            </form>
        </div>
    </div>
{% endblock %}