{% extends "base.njk" %}

{% block titulo %}Equipo: {{ team.name }}{% endblock %}

{% block contenido %}

    <h1>Detalles del Equipo {{ team.name }}</h1>

    <h3>Plantilla Actual (Roster)</h3>
    {% if team.roster.length > 0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nickname</th>
                    <th>Rol</th>
                </tr>
            </thead>
            <tbody>
                {% for member in team.roster %}
                    <tr>
                        <td>{{ member.player.nickname }}</td>
                        <td>{{ member.player.role }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning">Equipo sin jugadores activos</div>
    {% endif %}

    <div class="mt-3">
        <a href="/teams" class="btn btn-secondary">Volver al listado de equipos</a>
    </div>

{% endblock %}