{% extends "base.njk" %}

{% block titulo %}Lista de Equipos{% endblock %}

{% block contenido %}
    <h1>Equipos</h1>
    
    {% if teams.length > 0 %}

        {% for team in teams %}
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ team.name }}</h5> <a href="/teams/{{ team.id }}" class="btn btn-info">Ver detalles</a>

                    <a href="/teams/editar/{{ team.id }}" class="btn btn-warning">Editar</a>

                    <form action="/teams/{{ team.id }}" method="post" style="display:inline;">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        {% endfor %}
        
    {% else %}
        <div class="alert alert-info">
            No hay equipos en el sistema.
        </div>
    {% endif %}

{% endblock %}